<resources>

    <!-- The name of the application. -->
    <string name="app_name">Shine Cards</string>

    <!-- Tip text displayed at the bottom of the splash screen. -->
    <string name="tap_for_options">Tap for options</string>

    <!-- Text displayed on the result summary card when the game ended because time ran out. -->
    <string name="game_over">Game over</string>

    <!-- Text displayed on the result summary card when the game ended because all phrases were
         guessed correctly. -->
    <string name="great_job">Great job!</string>

    <!-- Format string used to display the final score on the result summary card. -->
    <string name="score_summary">Score: %1$d/%2$d</string>

    <!-- Menu item text to start a new game. -->
    <string name="new_game">New game</string>

    <!-- Menu item text to display the game instructions. -->
    <string name="instructions">Instructions</string>

    <!-- Phrases used during the tutorial. -->
    <string-array name="tutorial_phrases">
        <item>Swipe left or right to pass between cards</item>
        <item>Question Whos the worst? Tap to reveal answer</item>
        <item>Answer Drake Tap again to return back to question</item>
    </string-array>


    <!-- Phrases used during actual gameplay. -->
    <string-array name="questions">
        <item>We made it?</item>
        <item>whats 9+10?</item>
        <item>whats my name</item>
        <item>what do you look like?</item>
        <item>do you give up?</item>
        <item>whats 9+10?</item>
    </string-array>
    
    <!--  answers matched up withs index of corresponding question -->>
    <string-array name = "answers">
        <item >You know it</item>
        <item > Twinny Wunn</item>
        <item >dont worry about it</item>
        <item >like a mofukin ahhhhhh</item>
        <item >its too late</item>
        <item >never in the lifeee!</item>
    </string-array> 

</resources>
